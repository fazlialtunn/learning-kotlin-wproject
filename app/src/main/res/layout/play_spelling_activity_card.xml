<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/target_word_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Word: merhaba"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />



    <EditText
        android:id="@+id/word_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="  Enter word syllables"
        android:textColorHint="@color/black"
        android:background="@drawable/bottom_background"
        android:inputType="text"
        android:layout_below="@id/target_word_text_view"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_below="@id/word_edit_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
